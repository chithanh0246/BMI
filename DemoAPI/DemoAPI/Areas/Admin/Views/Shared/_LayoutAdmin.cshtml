<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BMI APP | @ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <link href="~/Public/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link href="~/Public/dist/css/adminlte.min.css" rel="stylesheet" />
    <link href="~/Public/css/_variable.css" rel="stylesheet" />
    <link href="~/Public/css/AdminLayout.css" rel="stylesheet" />
    @RenderSection("header", required: false)
</head>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <div class="brand-link text-center">
                <a href="/Admin/Dashboard" class="logo-admin">
                    <span style="font-size: 30px;">BMI</span>
                    <span class="brand-text font-weight-bold " style="font-size: 15px;">Admin</span>
                </a>
            </div>

            <!-- Sidebar -->
            <div class="sidebar">
                <div class="user-panel mt-2 mb-2 d-flex justify-content-center">
                    <div class="info">
                        <p href="#" class="d-block">Have a nice day!</p>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="/Admin/BaiTaps" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Exercises
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/TaiKhoans" class="nav-link">
                                <i class="nav-icon fas fa-user-cog"></i>
                                <p>
                                    Admin Accounts
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/ThucDons" class="nav-link">
                                <i class="nav-icon fas fa-hamburger"></i>
                                <p>
                                    Food Menu
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Login" class="nav-link">
                                <i class="nav-icon fas fa-sign-out-alt"></i>
                                <p>
                                    Log out
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        @RenderBody()


    </div>
    <!-- ./wrapper -->

    <script src="~/Public/plugins/jquery/jquery.min.js"></script>
    <script src="~/Public/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Public/dist/js/adminlte.min.js"></script>
    <script src="~/Public/dist/js/demo.js"></script>
</body>
</html>
